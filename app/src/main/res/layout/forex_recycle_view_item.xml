<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewHolderCardView"
    android:layout_width="match_parent"
    android:layout_height="64dp"

    android:layout_marginBottom="2dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/viewHolderBackground"

        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="200dp">


            <TextView
                android:id="@+id/promSymbol"
                style="@style/TextViewPrimary"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="0"
                android:drawableRight="@drawable/ic_baseline_favorite_border_24"
                android:gravity="bottom"
                android:text="SYMBOL"

                android:textSize="12sp" />

            <TextView
                android:id="@+id/companyName"
                style="@style/TextViewPrimary"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="0"
                android:text="COMPANY"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/currentUsdPrice"
                style="@style/TextViewPrimary"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_gravity="end"
                android:layout_marginRight="16dp"
                android:gravity="bottom"
                android:text="100"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/priceChange"
                style="@style/TextViewPrimary"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="end"
                android:layout_marginRight="16dp"
                android:gravity="bottom"
                android:text="100"
                android:textSize="15sp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>